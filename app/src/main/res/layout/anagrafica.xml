            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bordo_textview"

            android:clickable="true"
            app:backgroundTint="@color/colorCallButton"
            app:layout_constraintBottom_toBottomOf="@+id/anagraficaPaziente_indirizzo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/anagraficaPaziente_indirizzo"
