        <TextView
            android:id="@+id/valorOttenutoBlu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@drawable/bordo_textview"

            android:gravity="fill_vertical"
            android:paddingLeft="8dp"
